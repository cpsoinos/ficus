{
	"extends": ["//"],
	"tasks": {
		"build": {
			"outputs": [".svelte-kit/**"],
			"passThroughEnv": [
				"ENCRYPTION_KEY",
				"GITHUB_CLIENT_ID",
				"GITHUB_CLIENT_SECRET",
				"SENTRY_AUTH_TOKEN"
			]
		},
		"preview": {
			"persistent": true,
			"cache": false,
			"dependsOn": ["build"],
			"with": [
				"@ficus/argon2#dev",
				"@ficus/rate-limiter#dev",
				"@ficus/service-notes#dev",
				"@ficus/service-markdown#dev"
			]
		}
	}
}

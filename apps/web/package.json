{
	"name": "@ficus/web",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --open",
		"build": "vite build",
		"preview": "pnpm run build && wrangler pages dev",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --write . && eslint . --fix",
		"test:unit": "vitest run",
		"test": "pnpm run test:unit",
		"db:push": "drizzle-kit push",
		"db:push:local": "DATABASE_URL=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:generate:local": "DATABASE_URL=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:migrate:local": "DATABASE_URL=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:studio:local": "DATABASE_URL=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"test:e2e": "playwright test",
		"deploy": "pnpm run build && wrangler pages deploy",
		"cf-typegen": "wrangler types && mv worker-configuration.d.ts src/",
		"prepare": "svelte-kit sync"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.3",
		"@cloudflare/workers-types": "^4.20241218.0",
		"@eslint/compat": "^1.2.3",
		"@eslint/js": "^9.18.0",
		"@ficus/rate-limiter": "workspace:*",
		"@playwright/test": "^1.45.3",
		"@storybook/addon-essentials": "^8.4.7",
		"@storybook/addon-interactions": "^8.4.7",
		"@storybook/addon-svelte-csf": "^5.0.0-next.21",
		"@storybook/blocks": "^8.4.7",
		"@storybook/svelte": "^8.4.7",
		"@storybook/sveltekit": "^8.4.7",
		"@storybook/test": "^8.4.7",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-cloudflare": "^5.0.0",
		"@sveltejs/kit": "^2.16.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/node": "^22.10.2",
		"autoprefixer": "^10.4.20",
		"bits-ui": "1.0.0-next.74",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.30.1",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"storybook": "^8.4.7",
		"svelte": "^5.19.6",
		"svelte-check": "^4.1.4",
		"tailwind-merge": "^2.5.5",
		"tailwind-variants": "^0.3.0",
		"tailwindcss": "^3.4.9",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^6.0.7",
		"vitest": "^3.0.2",
		"wrangler": "^3.99.0"
	},
	"dependencies": {
		"@libsql/client": "^0.9.0",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@oslojs/otp": "^1.1.0",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.9",
		"arctic": "^2.3.3",
		"drizzle-orm": "^0.38.3",
		"ofetch": "^1.4.1",
		"uqr": "^0.1.2"
	}
}
